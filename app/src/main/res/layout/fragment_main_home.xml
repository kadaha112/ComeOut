<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:src="@drawable/my_logo" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="1"
        android:rowCount="1000"
        tools:ignore="MissingConstraints"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/ivbtn_food"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:src="@drawable/main_fragment_home_food"
            android:scaleType="centerCrop"
            android:backgroundTint="#A1CAEC" />
        <ImageButton
            android:id="@+id/ivbtn_movie"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:backgroundTint="#E4A7A7"
            android:scaleType="centerCrop"
            android:src="@drawable/main_fragment_home_movie"/>
        <ImageButton
            android:id="@+id/ivbtn_recommend"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:backgroundTint="#A9D378"
            android:scaleType="centerCrop"
            android:src="@drawable/main_fragment_home_recommend"/>


    </GridLayout>

</LinearLayout>